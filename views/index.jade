extends layout

block content
    h1= title
    
    // Wrapper
    #wrapper
        #tabs
            ul
                li.first
                    a(href='#user') Usuários
                li.second
                    a(href='#product') Produtos
                li.last
                    a(href='#order') Pedidos
            #user
                h2 Usuários

                // USER LIST
                h3 Lista de usuários
                #userList
                    table
                        thead
                            th Nome
                            th Email
                            th Delete?
                        tbody
                
                // USER INFO
                #userInfo.info
                    h3 Informação
                    p
                        strong Nome:
                        |  <span id='userInfoName'></span>
                        br
                    p
                       strong Email:
                        |  <span id='userInfoEmail'></span>
                        br
                    p
                       strong Endereço:
                        |  <span id='userInfoLocation'></span>
                // /USER INFO

                // ADD USER
                h3 Insere usuário
                #addUser
                    fieldset
                        input#inputUserName(type='text', placeholder='Nome')
                        input#inputUserEmail(type='text', placeholder='Email')
                        br
                        input#inputUserLocation(type='text', placeholder='Endereço')
                        br
                        button#btnAddUser Insere 
                // /ADD USER
            #product
                h2 Produtos
                h3 Lista de produtos
                #productList
                    table
                        thead
                            th Nome
                            th Preço
                            th Delete?
                        tbody
                               // USER INFO
                #prodInfo.info
                    h3 Informação
                    p
                        strong Nome:
                        |  <span id='prodInfoName'></span>
                        br
                    p
                       strong Preço:
                        |  <span id='prodInfoPrice'></span>
                        br

                // /USER INFO

                h3 Insere produto
                #addProduct
                    fieldset
                        input#inputProdName(type='text', placeholder='Nome')
                        input#inputProdPreco(type='number', placeholder='Preço')
                        br
                        button#btnAddProduct Insere 

                        
            #order
                h2 Pedidos
                h3 Lista de pedidos
                #orderList
                    table
                        thead
                            th Código
                            th Cliente
                            th Preço total
                            th Delete?
                        tbody
                               // USER INFO
                #orderList.info
                    h3 Informação do pedido
                    p
                        strong Client:
                        |  <span id='orderCustomerName'></span>
                        br
                    p
                       strong Preço total:
                        |  <span id='orderTotalPrice'></span>
                        br

                // /USER INFO

                h3 Insere pedido
                #addOrder
                    
                    h3 Cliente
                    fieldset                        
                    select#orderInputCustomerName(type='text', placeholder='Cliente')
                    br
                    
                    h3 Produto
                    .input_fields_wrap
                        button.add_field_button Adicionar Produto
                    br
                    button#btnAddOrder Insere

    // /WRAPPER